<resources>

    <!-- Базовая тема приложения -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Настройка цветов приложения -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorBackground">@color/background_light</item>
        <item name="colorButton">@color/colorPrimary</item>
        <item name="colorButtonText">@color/button_text_light</item>
        <item name="android:windowBackground">?attr/colorBackgroundLight</item>
        <item name="colorBackgroundLight">@color/colorBackgroundLight</item>
        <item name="colorBackgroundDark">@color/colorBackgroundDark</item>
    </style>

    <!-- Светлая тема -->
    <style name="LightTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorBackground">@color/background_light</item>
        <item name="colorButton">@color/colorPrimary</item>
        <item name="colorButtonText">@color/button_text_light</item>
    </style>

    <!-- Темная тема -->
    <style name="DarkTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorBackground">@color/background_dark</item>
        <item name="colorButton">@color/colorPrimary</item>
        <item name="colorButtonText">@color/button_text_dark</item>
    </style>

</resources>
